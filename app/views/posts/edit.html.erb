<h2>Edit</h2>

<%= bootstrap_form_for(@post,layout: :horizontal)  do |f| %>
  <p>

  <%= f.text_field :title %>
  </p>
  <p>
 
  <%= f.text_field :category %>
  </p>
  <p>
  
  <%= f.text_area(:body, size: '50x10')%>
  
  </p>
  <%= f.submit "Update",class: "btn btn-success col-sm-offset-2 col-sm-2" %>
<% end %>


<%= form_for @post, method: "DELETE", data:{confirm: "Are you sure?"} do |f| %>
  <%= f.submit "delete",class: "btn btn-success  col-sm-2" %>
<% end %>