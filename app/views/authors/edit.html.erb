<h2>Edit</h2>

<%= bootstrap_form_for(@author, layout: :horizontal) do |f| %>


  <p>
  
  <%= f.text_field :first_name, control_col: "col-sm-10" %>
  </p>
  <p>
 
  <%= f.text_field :last_name %>
  </p>
  <p>

  <%= f.text_field :age%>
  
  </p>
  <%= f.submit "Update", class: "btn btn-success col-sm-offset-2 col-sm-2"%>
<% end %>


<%= form_for @author, method: "DELETE", data:{confirm: "Are you sure?"} do |f| %>
  <%= f.submit "Delete", class: "btn btn-success col-sm-2" %>
<% end %>
